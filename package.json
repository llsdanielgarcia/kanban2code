{
  "name": "kanban2code",
  "displayName": "Kanban2Code",
  "description": "Kanban board meets AI context for VS Code",
  "version": "0.0.1",
  "private": true,
  "publisher": "kanban2code",
  "type": "module",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "workspaceContains:.kanban2code",
    "onCommand:kanban2code.scaffoldWorkspace",
    "onView:kanban2code.sidebar"
  ],
  "contributes": {
    "commands": [
      {
        "command": "kanban2code.openBoard",
        "title": "Kanban2Code: Open Board"
      },
      {
        "command": "kanban2code.newTask",
        "title": "Kanban2Code: New Task"
      },
      {
        "command": "kanban2code.scaffoldWorkspace",
        "title": "Kanban2Code: Scaffold Workspace"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kanban2code",
          "title": "Kanban2Code",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "kanban2code": [
        {
          "id": "kanban2code.sidebar",
          "name": "Kanban2Code"
        }
      ]
    }
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "build:watch": "bun run scripts/build.ts --watch",
    "lint": "bunx eslint \"src/**/*.{ts,tsx}\"",
    "format": "bunx prettier --write \"{src,scripts}/**/*.{ts,tsx,js,json,md}\""
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.14",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
