{
  "name": "kanban2code",
  "displayName": "Kanban2Code",
  "description": "Kanban board meets AI context for VS Code",
  "version": "0.0.1",
  "private": true,
  "publisher": "kanban2code",
  "type": "module",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "workspaceContains:.kanban2code",
    "onCommand:kanban2code.scaffoldWorkspace",
    "onCommand:kanban2code.archiveTask",
    "onCommand:kanban2code.archiveCompletedInProject",
    "onCommand:kanban2code.archiveProject",
    "onView:kanban2code.sidebar"
  ],
  "contributes": {
    "commands": [
      {
        "command": "kanban2code.openBoard",
        "title": "Kanban2Code: Open Board"
      },
      {
        "command": "kanban2code.newTask",
        "title": "Kanban2Code: New Task"
      },
      {
        "command": "kanban2code.scaffoldWorkspace",
        "title": "Kanban2Code: Scaffold Workspace"
      },
      {
        "command": "kanban2code.archiveTask",
        "title": "Kanban2Code: Archive Task"
      },
      {
        "command": "kanban2code.archiveCompletedInProject",
        "title": "Kanban2Code: Archive Completed in Project"
      },
      {
        "command": "kanban2code.archiveProject",
        "title": "Kanban2Code: Archive Project"
      },
      {
        "command": "kanban2code.copyTaskContext",
        "title": "Kanban2Code: Copy Task Context"
      },
      {
        "command": "kanban2code.copyTaskOnly",
        "title": "Kanban2Code: Copy Task Only"
      },
      {
        "command": "kanban2code.copyContextOnly",
        "title": "Kanban2Code: Copy Context Only"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kanban2code",
          "title": "Kanban2Code",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "kanban2code": [
        {
          "id": "kanban2code.sidebar",
          "name": "Kanban2Code"
        }
      ]
    }
  },
  "scripts": {
    "build": "bun run scripts/build.ts",
    "build:watch": "bun run scripts/build.ts --watch",
    "lint": "bunx eslint \"src/**/*.{ts,tsx}\"",
    "format": "bunx prettier --write \"{src,scripts}/**/*.{ts,tsx,js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "gray-matter": "^4.0.3",
    "monaco-editor": "^0.52.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^20.14.14",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vitest": "^4.0.15"
  }
}
