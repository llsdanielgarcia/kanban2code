{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["ES2022", "DOM"],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "tests/**/*", "webview/**/*"],
  "exclude": ["node_modules", ".vscode-test", "dist"]
}